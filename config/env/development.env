# API
API_VERSION=v2
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=true

# Segurança
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS512
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# GPU
CUDA_VISIBLE_DEVICES=0,1,2,3
MAX_BATCH_SIZE=4
VRAM_BUFFER_MB=2048

# Modelos
SDXL_MODEL_PATH=/app/models/sdxl/base
FISH_SPEECH_MODEL_PATH=/app/models/fish_speech/base
LORA_PATH=/app/models/loras

# Cache
CACHE_TTL=3600
MAX_CACHE_SIZE_MB=4096
CACHE_STRATEGY=lru

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=60

# Monitoramento
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=DEBUG

# Mídia
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_LENGTH_SECONDS=60
MAX_AUDIO_LENGTH_SECONDS=300
SUPPORTED_IMAGE_FORMATS=["png", "jpg", "jpeg", "webp"]
SUPPORTED_VIDEO_FORMATS=["mp4", "webm"]
SUPPORTED_AUDIO_FORMATS=["wav", "mp3"]

# Diretórios
MEDIA_DIR=/app/media
TEMP_DIR=/app/media/temp
LOG_DIR=/app/logs

# ComfyUI
COMFYUI_HOST=localhost
COMFYUI_PORT=8188
WORKFLOW_DIR=/app/workflows

# Celery
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1 