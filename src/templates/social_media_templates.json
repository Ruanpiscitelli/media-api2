{
  "templates": [
    {
      "name": "instagram_reels_promo",
      "description": "Template para promoções no Instagram Reels",
      "version": "1.0",
      "preview": "/media/previews/instagram_reels_promo.jpg",
      "duration": 30,
      "required_params": [
        "product_images",
        "product_name",
        "price",
        "cta_text",
        "background_music"
      ],
      "param_types": {
        "product_images": "list",
        "product_name": "str",
        "price": "str",
        "cta_text": "str",
        "background_music": "str",
        "style": "dict"
      },
      "settings": {
        "format": "mp4",
        "quality": "high",
        "fps": 60,
        "width": 1080,
        "height": 1920
      },
      "scenes": [
        {
          "duration": 3.0,
          "elements": [
            {
              "type": "text",
              "placeholder": "product_name",
              "position": {
                "x": 0.5,
                "y": 0.3
              },
              "style": {
                "fontSize": 64,
                "color": "#FFFFFF",
                "fontFamily": "Poppins-Bold",
                "textAlign": "center",
                "animation": {
                  "type": "slide",
                  "from": "top",
                  "duration": 0.5
                }
              }
            }
          ]
        },
        {
          "duration": 24.0,
          "elements": [
            {
              "type": "carousel",
              "placeholder": "product_images",
              "position": {
                "x": 0.5,
                "y": 0.5
              },
              "style": {
                "size": {
                  "width": 900,
                  "height": 900
                },
                "transition": {
                  "type": "slide",
                  "duration": 0.5
                },
                "border": {
                  "color": "#FFFFFF",
                  "width": 4,
                  "radius": 20
                }
              }
            },
            {
              "type": "text",
              "placeholder": "price",
              "position": {
                "x": 0.5,
                "y": 0.8
              },
              "style": {
                "fontSize": 72,
                "color": "#FF4D4D",
                "fontFamily": "Poppins-Black",
                "textAlign": "center",
                "animation": {
                  "type": "pulse",
                  "duration": 1.0
                }
              }
            }
          ]
        },
        {
          "duration": 3.0,
          "elements": [
            {
              "type": "text",
              "placeholder": "cta_text",
              "position": {
                "x": 0.5,
                "y": 0.5
              },
              "style": {
                "fontSize": 48,
                "color": "#FFFFFF",
                "fontFamily": "Poppins-Bold",
                "textAlign": "center",
                "background": {
                  "type": "solid",
                  "color": "#FF4D4D",
                  "padding": 20,
                  "radius": 10
                },
                "animation": {
                  "type": "scale",
                  "duration": 0.5
                }
              }
            }
          ]
        }
      ],
      "audio": {
        "music": {
          "placeholder": "background_music",
          "volume": 0.4,
          "fade": {
            "in": 0.5,
            "out": 0.5
          }
        }
      },
      "effects": {
        "transitions": {
          "type": "fade",
          "duration": 0.3
        }
      }
    },
    {
