      ],
      "audio": {
        "music": {
          "placeholder": "background_music",
          "volume": 0.3,
          "fade": {
            "in": 1.0,
            "out": 1.0
          }
        }
      },
      "effects": {
        "video": {
          "filters": {
            "brightness": 0.8,
            "contrast": 1.2
          }
        },
        "transitions": {
          "type": "fade",
          "duration": 0.5
        }
      }
    },
